upstream django {
    server 127.0.0.1:3031;
}
server {
    server_name grader-n.foo.bar;

    charset utf-8;
    client_max_body_size 50M;

    location /static {
        alias /home/[shell-username]/mooc-grader/static;
    }
    location /robots.txt {
        alias /home/[shell-username]/mooc-grader/static/robots.txt;
    }
    location / {
        uwsgi_pass  django;
        include     uwsgi_params;
    }
}
